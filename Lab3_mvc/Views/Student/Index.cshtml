@model IEnumerable<Student>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
    <a asp-action="create" asp-controller="student" class="btn btn-primary my-4 text-center">Add New Student Data</a>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count()==0){
                 <tr>
                    <th colspan="3" >No Students Exixts</th>
                </tr>
            }else{
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>
                        <img src="./images/@item.stdImg" width="200px"/></td>
                    <td>
                        <a asp-action="details" asp-controller="student" asp-route-Id="@item.Id" class="btn btn-success">Details</a>
                        <a asp-action="delete" asp-controller="student" asp-route-Id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you want to Delete this Image')">Delete</a>
                        <a asp-action="edit" asp-controller="student" asp-route-Id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="editImg" asp-controller="student" asp-route-Id="@item.Id" class="btn btn-info">Edit Image</a>
                        <a asp-action="Download" asp-controller="student" asp-route-id="@item.Id" class="btn btn-dark">Download</a>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>